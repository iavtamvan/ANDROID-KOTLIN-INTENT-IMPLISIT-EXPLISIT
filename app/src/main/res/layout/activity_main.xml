<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pindah activity Implisit"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20dp"
            android:id="@+id/btnPindahActivityImplisit"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pindah activity explisit"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20dp"
            android:id="@+id/btnPindahActivityExplisit"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pindah activity"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20dp"
            android:id="@+id/btnPindahActivityIntentBundle"/>

</LinearLayout>